<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav_graph"
    app:startDestination="@id/firstFragment">

    <fragment
        android:id="@+id/firstFragment"
        android:name="com.al.kotlin01helloworld.FirstFragment"
        android:label="fragment_first"
        tools:layout="@layout/fragment_first">
        <action
            android:id="@+id/action_firstFragment_to_secondFragment"
            app:destination="@id/navGroup" />
        <action
            android:id="@+id/action_firstFragment_to_otherActivity2"
            app:destination="@id/otherActivity" />
    </fragment>
    <activity
        android:id="@+id/otherActivity"
        android:name="com.al.kotlin01helloworld.OtherActivity"
        android:label="activity_other"
        tools:layout="@layout/activity_other" />
    <navigation
        android:id="@+id/navGroup"
        app:startDestination="@id/thirdFragment">
        <fragment
            android:id="@+id/secondFragment"
            android:name="com.al.kotlin01helloworld.SecondFragment"
            android:label="fragment_second"
            tools:layout="@layout/fragment_second">
            <action
                android:id="@+id/action_secondFragment_to_thirdFragment"
                app:destination="@id/thirdFragment" />
        </fragment>
        <fragment
            android:id="@+id/thirdFragment"
            android:name="com.al.kotlin01helloworld.ThirdFragment"
            android:label="fragment_third"
            tools:layout="@layout/fragment_third" />
    </navigation>
</navigation>